<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WhatsApp Bot Simulator</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .phone-container {
      background: #000;
      border-radius: 40px;
      padding: 15px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
      max-width: 400px;
      width: 100%;
      height: 700px;
      display: flex;
      flex-direction: column;
    }

    .phone-screen {
      background: #0a0a0a;
      border-radius: 25px;
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .chat-header {
      background: #128C7E;
      color: white;
      padding: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: #25D366;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
    }

    .header-info h3 {
      font-size: 16px;
      font-weight: 500;
    }

    .header-info p {
      font-size: 12px;
      opacity: 0.8;
    }

    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 20px;
      background: #0a0a0a;
      background-image: 
        repeating-linear-gradient(
          45deg,
          transparent,
          transparent 10px,
          rgba(255,255,255,.02) 10px,
          rgba(255,255,255,.02) 20px
        );
    }

    .chat-messages::-webkit-scrollbar {
      width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
      background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
      background: #333;
      border-radius: 3px;
    }

    .message {
      margin-bottom: 15px;
      display: flex;
      animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .message.user {
      justify-content: flex-end;
    }

    .message-bubble {
      max-width: 75%;
      padding: 10px 15px;
      border-radius: 10px;
      word-wrap: break-word;
      white-space: pre-wrap;
    }

    .message.bot .message-bubble {
      background: #1f1f1f;
      color: #fff;
      border-bottom-left-radius: 2px;
    }

    .message.user .message-bubble {
      background: #005c4b;
      color: #fff;
      border-bottom-right-radius: 2px;
    }

    .timestamp {
      font-size: 11px;
      opacity: 0.6;
      margin-top: 5px;
      text-align: right;
    }

    .chat-input-container {
      background: #1f1f1f;
      padding: 10px;
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .chat-input {
      flex: 1;
      background: #2a2a2a;
      border: none;
      border-radius: 20px;
      padding: 12px 20px;
      color: white;
      font-size: 14px;
      outline: none;
    }

    .chat-input::placeholder {
      color: #666;
    }

    .send-button {
      background: #128C7E;
      border: none;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      color: white;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.2s;
      font-size: 20px;
    }

    .send-button:hover {
      background: #0f7a6e;
    }

    .send-button:disabled {
      background: #555;
      cursor: not-allowed;
    }

    .controls {
      margin-top: 20px;
      text-align: center;
    }

    .control-button {
      background: rgba(255,255,255,0.1);
      border: 1px solid rgba(255,255,255,0.2);
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      margin: 0 5px;
      cursor: pointer;
      font-size: 12px;
      transition: background 0.2s;
    }

    .control-button:hover {
      background: rgba(255,255,255,0.2);
    }

    .user-select {
      background: rgba(255,255,255,0.1);
      border: 1px solid rgba(255,255,255,0.2);
      color: white;
      padding: 8px 12px;
      border-radius: 20px;
      margin: 0 5px;
      font-size: 12px;
      cursor: pointer;
    }

    .user-select option {
      background: #2a2a2a;
      color: white;
    }

    .typing-indicator {
      display: none;
      align-items: center;
      gap: 5px;
      padding: 10px 15px;
      background: #1f1f1f;
      border-radius: 10px;
      max-width: 75px;
    }

    .typing-indicator.active {
      display: flex;
    }

    .typing-dot {
      width: 8px;
      height: 8px;
      background: #666;
      border-radius: 50%;
      animation: typing 1.4s infinite;
    }

    .typing-dot:nth-child(2) {
      animation-delay: 0.2s;
    }

    .typing-dot:nth-child(3) {
      animation-delay: 0.4s;
    }

    @keyframes typing {
      0%, 60%, 100% {
        transform: translateY(0);
      }
      30% {
        transform: translateY(-10px);
      }
    }

    @media (max-width: 480px) {
      body {
        padding: 10px;
      }
      
      .phone-container {
        max-width: 100%;
        height: 100vh;
        border-radius: 0;
        padding: 0;
      }

      .phone-screen {
        border-radius: 0;
      }

      .controls {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0,0.9);
        padding: 10px;
        margin: 0;
      }
    }
  </style>
</head>
<body>
  <div class="phone-container">
    <div class="phone-screen">
      <div class="chat-header">
        <div class="avatar">ðŸ¤–</div>
        <div class="header-info">
          <h3>Assistant Bot</h3>
          <p>Online</p>
        </div>
      </div>

      <div class="chat-messages" id="chatMessages">
        <div class="message bot">
          <div class="message-bubble">
            Welcome to the WhatsApp Bot Simulator! ðŸ‘‹
            <br><br>
            Send a message to start chatting.
          </div>
        </div>
      </div>

      <div class="chat-input-container">
        <input 
          type="text" 
          class="chat-input" 
          id="messageInput" 
          placeholder="Type a message..."
          autocomplete="off"
        >
        <button class="send-button" id="sendButton">
          âž¤
        </button>
      </div>
    </div>

    <div class="controls">
      <select class="user-select" id="userSelect">
        <option value="user1">User 1</option>
        <option value="user2">User 2</option>
        <option value="user3">User 3</option>
      </select>
      <button class="control-button" onclick="clearChat()">Clear Chat</button>
      <button class="control-button" onclick="exportChat()">Export</button>
    </div>
  </div>

  <script>
    let currentUser = 'user1';
    const chatMessages = document.getElementById('chatMessages');
    const messageInput = document.getElementById('messageInput');
    const sendButton = document.getElementById('sendButton');
    const userSelect = document.getElementById('userSelect');

    // Load history on start
    loadHistory();

    // Send message on Enter
    messageInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });

    // Send button click
    sendButton.addEventListener('click', sendMessage);

    // User selection change
    userSelect.addEventListener('change', (e) => {
      currentUser = e.target.value;
      loadHistory();
    });

    async function sendMessage() {
      const message = messageInput.value.trim();
      if (!message) return;

      // Disable input
      messageInput.disabled = true;
      sendButton.disabled = true;

      // Add user message
      addMessage('user', message);
      messageInput.value = '';

      // Show typing indicator
      showTyping();

      try {
        // Send to server
        const response = await fetch('/api/message', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ userId: currentUser, message })
        });

        const data = await response.json();

        // Hide typing, add bot response
        hideTyping();
        setTimeout(() => {
          addMessage('bot', data.response);
        }, 300);

      } catch (error) {
        hideTyping();
        addMessage('bot', 'Sorry, something went wrong. Please try again.');
        console.error('Error:', error);
      } finally {
        messageInput.disabled = false;
        sendButton.disabled = false;
        messageInput.focus();
      }
    }

    function addMessage(type, text) {
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${type}`;
      
      const bubble = document.createElement('div');
      bubble.className = 'message-bubble';
      bubble.textContent = text;
      
      const timestamp = document.createElement('div');
      timestamp.className = 'timestamp';
      timestamp.textContent = new Date().toLocaleTimeString([], { 
        hour: '2-digit', 
        minute: '2-digit' 
      });
      bubble.appendChild(timestamp);
      
      messageDiv.appendChild(bubble);
      chatMessages.appendChild(messageDiv);
      
      // Scroll to bottom
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function showTyping() {
      const typingDiv = document.createElement('div');
      typingDiv.className = 'message bot';
      typingDiv.id = 'typingIndicator';
      
      const indicator = document.createElement('div');
      indicator.className = 'typing-indicator active';
      indicator.innerHTML = '<div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>';
      
      typingDiv.appendChild(indicator);
      chatMessages.appendChild(typingDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function hideTyping() {
      const typing = document.getElementById('typingIndicator');
      if (typing) typing.remove();
    }

    async function loadHistory() {
      chatMessages.innerHTML = '';
      
      try {
        const response = await fetch(`/api/history/${currentUser}`);
        const history = await response.json();
        
        if (history.length === 0) {
          addMessage('bot', 'Send a message to start chatting! ðŸ‘‹');
        } else {
          history.forEach(msg => {
            addMessage(msg.from, msg.text);
          });
        }
      } catch (error) {
        console.error('Error loading history:', error);
      }
    }

    async function clearChat() {
      if (confirm('Clear this conversation?')) {
        try {
          await fetch(`/api/clear/${currentUser}`, { method: 'POST' });
          loadHistory();
        } catch (error) {
          console.error('Error clearing chat:', error);
        }
      }
    }

    function exportChat() {
      const messages = Array.from(chatMessages.querySelectorAll('.message')).map(msg => {
        const type = msg.classList.contains('user') ? 'User' : 'Bot';
        const bubble = msg.querySelector('.message-bubble');
        if (!bubble) return '';
        
        // Get text without timestamp
        const clone = bubble.cloneNode(true);
        const timestamp = clone.querySelector('.timestamp');
        if (timestamp) timestamp.remove();
        
        return `[${type}] ${clone.textContent.trim()}`;
      }).filter(msg => msg).join('\n\n');
      
      const blob = new Blob([messages], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `chat-${currentUser}-${Date.now()}.txt`;
      a.click();
      URL.revokeObjectURL(url);
    }
  </script>
</body>
</html>
